apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ app_name }}
  namespace: argocd
  labels:
    name: {{ app_name }}
spec:
  project: {{ project_name }}

  source:
    repoURL: {{ repo_url }}
    targetRevision: HEAD
    path: {{ path_in_repo }}

    kustomize:
      images:
      - simple-web-app={{ image_registry_server }}/simple-web-app

  destination:
    server: {{ dest_server }}
    namespace: {{ dest_namespace }}

  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
